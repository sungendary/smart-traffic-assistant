# 환경 변수 예시 파일
# .env.example을 복사하여 .env 파일을 생성하고 실제 값을 입력하세요

# MongoDB 설정
MONGODB_URI=mongodb://mongo:27017
MONGODB_DB=datingapp

# Redis 설정
REDIS_URL=redis://redis:6379/0

# JWT 시크릿 (32자 이상 랜덤 문자열)
# 생성: python -c "import secrets; print(secrets.token_urlsafe(48))"
JWT_SECRET_KEY=change-me-to-a-secure-random-string-at-least-32-chars

# JWT 만료 시간 (분)
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_MINUTES=10080

# 비밀번호 해시 방식 (argon2 또는 bcrypt)
PASSWORD_HASH_SCHEME=argon2

# Kakao Maps API
KAKAO_MAP_APP_KEY=12a9629f0b026f97c5c0671cbd3039c8
KAKAO_REST_API_KEY=485a6993a82ba4a2382a21e995d321af

# OpenWeatherMap API (날씨 정보)
# 무료 tier: https://openweathermap.org/
OPENWEATHER_API_KEY=3b71f2be9de7c66d5afd752f51caf329

# CORS 설정 (쉼표로 구분)
CORS_ORIGINS=http://localhost:8000,http://localhost:3000,http://localhost

# LLM 설정 (Ollama)
LLM_BASE_URL=http://llm:11434
LLM_MODEL=qwen2.5:0.5b
LLM_TEMPERATURE=0.2
